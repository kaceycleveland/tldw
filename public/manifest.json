{
  "manifest_version": 3,
  "name": "TLDW Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension built with Vite and Tailwind CSS",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TLDW Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}