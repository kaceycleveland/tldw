{
  "manifest_version": 3,
  "name": "TLDW Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension built with Vite and Tailwind CSS",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.supabase.co/*",
    "http://127.0.0.1:54321/*",
    "http://localhost:54321/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "TLDW Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["sidepanel.css"],
      "run_at": "document_idle"
    }
  ]
}